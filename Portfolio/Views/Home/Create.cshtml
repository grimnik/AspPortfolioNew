@model Portfolio.Models.HomeCreateViewModel
<div class="jumbotron">
    <h1 class="display-4">Project Aanmaken</h1>
    <hr class="my-4">
    <form asp-action="Create" asp-controller="Home" method="post" role="form" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Titel"></label>
            <input asp-for="Titel" class="form-control" />
            <span class="text-danger" asp-validation-for="Titel"></span>
        </div>
        <div class="form-group">
            <label asp-for="Beschrijving"></label>
            <input asp-for="Beschrijving" class="form-control" />
            <span class="text-danger" asp-validation-for="Beschrijving"></span>
        </div>
        <div class="form-group">
            <label asp-for="Tags">Choose Tags</label>

            @for (int i = 0; i < Model.Tags.Count; i++)
            {
                <label>@Model.Tags[i].Name</label>
                <input type="checkbox" asp-for="@Model.Tags[i].Checked" />
                <input type="hidden" asp-for="@Model.Tags[i].Id" />
                <input type="hidden" asp-for="@Model.Tags[i].Name" />
            }

            @*<select asp-for="SelectedTag" asp-items="Model.Tags" class="btn btn-secondary text-danger"></select>*@

            <span class="text-danger" asp-validation-for="Tags"></span>
        </div>
        <div class="form-group">
            <label asp-for="Foto"></label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Upload</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="inputGroupFile01" asp-for="Foto">
                   <label class="custom-file-label" for="inputGroupFile01">Choose File</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SelectedStatus"></label><br />
            <select asp-for="SelectedStatus" asp-items="Model.Statuses" class="btn btn-secondary text-danger"></select>
            <span class="text-danger" asp-validation-for="SelectedStatus"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-secondary text-danger" value="Create!" />
        </div>
    </form>
</div>